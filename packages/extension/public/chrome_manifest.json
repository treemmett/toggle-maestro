{
  "name": "Toggle Maestro",
  "version": "1.0",
  "description": "Toggle those features, with finesse",
  "permissions": ["declarativeContent"],
  "manifest_version": 3,
  "background": {
    "service_worker": ["browser-polyfill.js", "background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/date-time-16.png",
      "32": "images/logo/date-time-32.png",
      "48": "images/logo/date-time-48.png",
      "128": "images/logo/date-time-128.png"
    }
  },
  "icons": {
    "16": "images/logo/date-time-16.png",
    "32": "images/logo/date-time-32.png",
    "48": "images/logo/date-time-48.png",
    "128": "images/logo/date-time-128.png"
  }
}
